@model IEnumerable<CGA.Models.ClaimModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<form asp-controller="Claim" asp-action="Index">
    <p style="margin:40px">
        Loclisation: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.accidentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.localisation)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.cinInsured2)
        </th>
     
        <th>
            @Html.DisplayNameFor(model => model.etat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contract_id)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.accidentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.localisation)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.cinInsured2)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.etat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contract_id)
        </td>
      
        <td>
            <a href="@Url.Action("Delete", "Claim", new { id = item.id })" class="btn btn-danger">
                Delete
                <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Edit", "Claim", new { id = item.id })" class="btn btn-success">
                Edit
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Details", "Claim", new { id = item.id })" class="btn btn-info">
                Details
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            </a>

        </td>
    </tr>
}

</table>
